{% if mysql_ha == 'master-slave' or groups[bra ~ '_mysql'].index(inventory_hostname) + 1 == 2 %}
{% set host = MYSQL.HOSTS[0].HOST %}
{% elif mysql_ha == 'master-master-slave' and groups[bra ~ '_mysql'].index(inventory_hostname) + 1 >= 3 %}
{% set host = MYSQL.HOSTS[1].HOST %}
{% else %}
{% set host = MYSQL.HOSTS[0].HOST %}
{% endif %}


{% if groups[bra ~ '_mysql'].index(inventory_hostname) + 1 >= 2 and (mysql_version == '5.5' or mysql_version == '5.6')%}
STOP SLAVE;
CHANGE MASTER TO MASTER_HOST='{{ host }}', 
                 MASTER_USER='replicator', 
                 MASTER_PASSWORD='mysql_pass_replicator', 
                 MASTER_LOG_FILE='mysql-bin.000001', 
                 MASTER_LOG_POS=5821;
                 
START SLAVE;
SHOW SLAVE STATUS;
{% endif %}

{% if groups[bra ~ '_mysql'].index(inventory_hostname) + 1 >= 2 and (mysql_version == '5.7' or mysql_version == '8.0')%}
STOP SLAVE;
CHANGE MASTER TO MASTER_HOST='{{ host }}', 
                 MASTER_USER='replicator', 
                 MASTER_PASSWORD='mysql_pass_replicator', 
                 MASTER_AUTO_POSITION=1;
                 
START SLAVE;
SHOW SLAVE STATUS;
{% endif %}