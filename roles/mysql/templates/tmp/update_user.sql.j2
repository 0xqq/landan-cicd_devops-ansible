{% if mysql_version == '5.5' or mysql_version == '5.6' %}
UPDATE mysql.user SET password=PASSWORD('{{ CONNECTIONS[0]['PASSWORD'] }}') WHERE user='{{ CONNECTIONS[0]['USER'] }}';
{% endif %}

{% if mysql_version == '5.7' or mysql_version == '8.0' or mysql_version == '8.1' %}
UPDATE mysql.user SET authentication_string=password('{{ CONNECTIONS[0]['PASSWORD'] }}'), password_expired = 'N' WHERE user='{{ CONNECTIONS[0]['USER'] }}';
{% endif %}

{% if mysql_version == '8.0' or mysql_version == '8.1' %}
ALTER USER '{{ CONNECTIONS[0]['PASSWORD'] }}'@'{{ CONNECTIONS[0]['HOST'] }}' IDENTIFIED BY '{{ CONNECTIONS[0]['PASSWORD'] }}';
{% endif %}

FLUSH PRIVILEGES;
