{% if mysql_version == '5.5' or mysql_version == '5.6' %}
UPDATE mysql.user SET password=PASSWORD('{{ ROOT_PASSWORD }}') WHERE user='root';
{% endif %}

{% if mysql_version == '5.7' or mysql_version == '8.0' or mysql_version == '8.1' %}
UPDATE mysql.user SET authentication_string=password('{{ ROOT_PASSWORD }}'), password_expired = 'N' WHERE user='root';
{% endif %}

{% if mysql_version == '8.0' or mysql_version == '8.1' %}
ALTER USER 'root'@'localhost' IDENTIFIED BY '{{ ROOT_PASSWORD }}';
{% endif %}

FLUSH PRIVILEGES;
